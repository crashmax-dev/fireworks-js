  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "fireworks-js": "workspace:2.2.0"
  },
  "devDependencies": {
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@vitejs/plugin-react": "2.0.0",
    "react": "18.2.0",
