{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "rootDir": "src",
    "outDir": "dist",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}